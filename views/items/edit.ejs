<!DOCTYPE html>
<html>
<head>
  <title>Edit <%= item.name %></title>
</head>
<body>
  <h1>Edit Item</h1>

  <form action="/items/<%= item.id %>/update" method="POST">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" value="<%= item.name %>" required>

    

    <label for="quantity">Quantity:</label>
    <input type="number" id="quantity" name="quantity" value="<%= item.quantity %>" required>

    <label for="price">Price:</label>
    <input type="number" id="price" name="price" value="<%= item.price %>" step="0.01" required>

    <label for="category">Category:</label>
    <select name="category_id" required>
      <% categories.forEach(category => { %>
        <option value="<%= category.id %>" <%= category.id === item.category_id ? 'selected' : '' %>>
          <%= category.name %>
        </option>
      <% }) %>
    </select>

    <button type="submit">Update Item</button>
  </form>

  <a href="/items/<%= item.id %>">Cancel</a>
</body>
</html>
